<resources>
    <style name="Whackapede" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/sunshine_yellow</item>
        <item name="colorPrimaryDark">@color/sunset_yellow</item>
        <item name="colorAccent">@color/day_blue</item>
        <item name="android:colorBackground">@color/sunshine_yellow</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Whackapede.ActionBar">
        <item name="titleTextColor">@color/earth_brown</item>
        <item name="android:colorBackground">@color/sun_bleached</item>
        <item name="android:textColor">@color/grass_green</item>
        <item name="android:textColorSecondary">@color/grass_green</item>
    </style>

    <style name="Whackapede.AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/earth_brown</item>
        <item name="android:textColor">@color/grass_green</item>
        <item name="android:textColorPrimary">@color/earth_brown</item>
        <item name="android:background">@color/sun_bleached</item>
    </style>
</resources>