<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_no_top_players_leaderboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sunshine_yellow"
    android:visibility="gone"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/image_no_top_players_leaderboard"
        android:layout_width="@dimen/retrieve_icon_size"
        android:layout_height="@dimen/retrieve_icon_size"
        android:contentDescription="@string/retrieving_image"
        android:src="@drawable/icon_information"
        app:layout_constraintBottom_toTopOf="@id/text_no_top_players_leaderboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_no_top_players_leaderboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/close_margin"
        android:text="@string/no_top_players_leaderboard"
        android:textAlignment="center"
        android:textColor="@color/earth_brown"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_no_top_players_leaderboard" />
</androidx.constraintlayout.widget.ConstraintLayout>